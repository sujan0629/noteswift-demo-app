{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
        "rootDirs": ["src", "../../shared"],
        
    "module": "commonjs",
    "outDir": "compiled",
    "rootDirs": ["src", "../shared"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "../../shared/**/*"]
}
