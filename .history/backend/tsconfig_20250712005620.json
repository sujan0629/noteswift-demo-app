{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es6","dom"],

    // instead of a single rootDir, we use rootDirs
    "rootDirs": ["src", "../shared"],  

    "outDir": "compiled/backend",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // ── PATH ALIAS SETUP ──────────────────────────────────────────
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "compiled"
  ]
}
