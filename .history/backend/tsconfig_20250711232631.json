{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../../shared/*"]
    },
    "module": "commonjs",
    "outDir": "compiled",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
