{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "baseUrl": ".",                // relative to backend folder
    "paths": {
      "@shared/*": ["../shared/*"] // relative to backend folder
    },
    "rootDirs": ["src", "../shared"],
    "module": "commonjs",
    "outDir": "./compiled",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "../shared/**/*"]
}
