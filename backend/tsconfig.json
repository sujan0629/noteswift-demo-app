{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../../shared/*"]
    },
    "module": "commonjs",
    "outDir": "compiled",
    "rootDirs": ["src", "../shared"],      // <-- Add this to tell TS to treat both folders as source roots
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "../shared/**/*"]
}
